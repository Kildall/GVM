@using GVM.Data.ViewModels


<div class="list-group-item list-group-item-action d-flex gap-3 py-3" @onclick="() => AbrirDetalle(Venta.VentaId)">
    <MudImage Src="svg/package.svg" Height="32" Class="flex-shrink-0"></MudImage>
    <div class="d-flex gap-2 w-100 justify-content-between">
        <div>
            <div class="mb-0 d-flex">
                <h6 class="mb-0 opacity-50 mr-1">@Venta.VentaId</h6>
                <h6 class="mb-0">@Venta.Cliente.Nombre</h6>
            </div>
            <p class="mb-0 opacity-75">@Venta.Estado.DescEstado</p>
        </div>
        <div>
            <small class="opacity-50 text-nowrap d-block">@Venta.FechaUltimaActualizacion.ToShortDateString()</small>
            <small class="opacity-50 text-nowrap d-block">@Venta.FechaUltimaActualizacion.ToShortTimeString()</small>
        </div>
    </div>
</div>



@code
{
    [Parameter]
    public VentaViewModel Venta { get; set; }

    [Parameter] 
    public Action<int> AbrirDetalle { get; set; }
}
