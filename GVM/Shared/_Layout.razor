@inherits LayoutComponentBase

<Layout Sider>
    <LayoutSider>
        <LayoutSiderContent>
            @if (platform == DevicePlatform.WinUI)
            {
                <WindowsNavMenu />
            }
        </LayoutSiderContent>
    </LayoutSider>
    <Layout>
        <LayoutContent>
            <div class="m-2">
                @Body
            </div>
        </LayoutContent>
    </Layout>
    <LayoutFooter>
        @if (platform == DevicePlatform.Android)
        {
            <AndroidNavBar />
        }
    </LayoutFooter>
</Layout>

@code {
    DevicePlatform platform = DeviceInfo.Current.Platform;
}