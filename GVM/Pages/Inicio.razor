@page "/auth"
@inject NavigationManager Navigation

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">Welcome</h3>
                </div>
                <div class="card-body">
                    <p class="mb-4">Please choose an option:</p>
                    <div class="d-flex align-items-center justify-content-around mt-4 mb-0">
                        <button type="button" class="btn btn-primary" @onclick="NavigateToLogin">Login</button>
                        <button type="button" class="btn btn-secondary" @onclick="NavigateToRegister">Register</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private void NavigateToLogin()
    {
        Navigation.NavigateTo("/login");
    }

    private void NavigateToRegister()
    {
        Navigation.NavigateTo("/register");
    }
}