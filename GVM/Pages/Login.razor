@page "/login"
@using GVM.Services
@inject SeguridadService UsuarioService

<EditForm Model="@loginModel" OnValidSubmit="HandleValidSubmit">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header">
                        <h3 class="text-center font-weight-light my-4">Login</h3>
                    </div>
                    <div class="card-body">
                        <div class="form-floating mb-3">
                            <InputText class="form-control" id="email" placeholder="name@example.com" @bind-Value="loginModel.Email" />
                            <label for="email">Email address</label>
                        </div>
                        <div class="form-floating mb-3">
                            <InputText class="form-control" id="password" placeholder="Password" type="password" @bind-Value="loginModel.Password" />
                            <label for="password">Password</label>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</EditForm>

@code {
    private LoginModel loginModel = new LoginModel();

    private class LoginModel
    {
        public string Email { get; set; }
        public string Password { get; set; }
    }

    private async Task HandleValidSubmit()
    {
        try
        {
            var user = await UsuarioService.ValidateLoginAsync(loginModel.Email, loginModel.Password);

        }
        catch (Exception e)
        {
            Console.WriteLine(e);
            throw;
        }
    }
}